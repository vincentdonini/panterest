{% extends 'layouts/base.html.twig' %}

{% block title %}
    PANTEREST - Log in
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <article>

                <div class="text-center mb-5">
                    <h1>
                        Please sign in
                    </h1>

                    <p class="text-muted">
                        Your pins are waiting for you.
                    </p>
                </div>

                {% if error %}
                    <div class="alert alert-danger" role="alert">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}


                <form method="post">
                    <div class="mb-3">
                        <label for="email" class="form-label required">
                            Email
                        </label>
                        <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" autocomplete="email" required>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label required">
                            Password
                        </label>
                        <input type="password" name="password" id="password" class="form-control" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="d-flex justify-content-between">
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="_remember_me" id="remember_me">
                                <label class="form-check-label" for="remember_me">
                                    Remember me
                                </label>
                            </div>
                        </div>
                        <div>
                            <a href="#" title="Forgot password ?">
                                Forgot password ?
                            </a>
                        </div>
                    </div>
                    <div class="d-grid mt-3">
                        <button class="btn btn-primary" type="submit">
                            Sign in
                        </button>
                    </div>

                    <p class="mt-5 mb-3 text-center text-muted">
                        Not registered yet? <a href="#">Create an account</a>
                    </p>
                </form>

            </article>
        </div>
    </div>
{% endblock %}
